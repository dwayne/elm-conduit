#!/usr/bin/env bash

#
# Usage: check-scripts
#

set -euo pipefail

project="${project:?}"

shellcheck --norc -xP "$project/bin" "$project/bin/"*
#
# --no-rc             Don't look for .shellcheckrc files
# -x                  Allow 'source' outside of FILES
# -P "$project/bin"   Specify path when looking for sourced files ("SCRIPTDIR" for script's dir)
# "$project"/bin/*    FILES...
#
